html
	head
		title= title
		link(href='/css/bootstrap.min.css' rel='stylesheet' type='text/css')
	body

	div(class='container theme-showcase' role='main')
			.row
				.col-md-6.col-md-offset-3
					|
					h1 Dearchiver
					|
					.jumbotron
						.row
							.col
								h2 Enter OECD code

								div #{message}

								if message == 'notFound'
									div.alert.alert-danger The file could not be found!
								if message == 'emptyCode'
									div.alert.alert-danger Please enter a code!

								h1 #{url}

								form.navbar-form.navbar-left(action='' method='post')
									.col-lg-6
										.input-group
											input.form-control(type='text' placeholder='Code goes here ...' name='blobFile' id='blobFile')
											span.input-group-btn
												button.btn.btn-default(type='submit') Go!
